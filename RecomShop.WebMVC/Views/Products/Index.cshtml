@model IEnumerable<RecomShop.WebMVC.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="mb-4">Products</h1>

<a class="btn btn-success mb-4" asp-action="Create">Add Product</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        Category: @item.Category.CategoryName <br />
                        Price: @item.Price Lei <br />
                        Rating: @item.Rating
                    </p>

                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
